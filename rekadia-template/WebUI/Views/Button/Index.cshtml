@{
    ViewBag.Title = "Button";
}

<h1>@ViewBag.View</h1>

@using (Html.BeginForm("Danger", "Button", FormMethod.Post))
{
    <button type="submit" class="btn btn-danger">
        <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> Danger 
    </button>
}

@using (Html.BeginForm("Default", "Button", FormMethod.Post))
{
    <button type="submit" class="btn btn-default">
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Default
    </button>
}

@using (Html.BeginForm("Primary", "Button", FormMethod.Post))
{
    <button type="submit" class="btn btn-primary">
        <span class="glyphicon glyphicon-star" aria-hidden="true"></span> Primary
    </button>
}