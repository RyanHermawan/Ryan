@using WebUI.Extension;
@using MvcSiteMapProvider.Web.Html;
@{
    ViewBag.Title = "CrewWhitelist";
    var currentController = (WebUI.Controllers.CrewController)ViewContext.Controller;
}

<div class="page-header">
    <div class="btn-group pull-right">
        @Html.ActionLink("Add Whitelist", "CreateWhitelist", new { area = "" }, new { @class = "btn btn-default" })
    </div>
    @if (Request.IsAuthenticated)
    {
        <text>
            <strong>Hello, @User.Identity.Name</strong>

        </text>
        <br />
        @Html.ActionLink("Sign Out", "Logout", "Admin")
    }
    <h1>@ViewBag.Title</h1>
</div>
<h2><b>Crew Hari Ini</b></h2>
<div id="gridCrew"></div>

<h2><b>Data Crew yang Whitelist</b></h2>
@Html.Raw(currentController.GetMessage())
<div id="grid"></div>

@section scripts
{
    <script type="text/javascript">

        function deleteItem(e) {
            e.preventDefault();
            var data = this.dataItem(getDataRowGrid(e));
            goToDeletePage('@Url.Action("DeleteWhitelist")' + "?id=" + data.Id,this.dataSource);
        }

        function editItem(e) {
            e.preventDefault();
            var data = this.dataItem(getDataRowGrid(e));
            window.location.href = "@Url.Action("EditWhitelist")" + "?id=" + data.Id;
        }

        $(document).ready(function () {
        //Binding Crew Hari ini
        var dataSourceCrew = new kendo.data.DataSource({
            transport: {
                read: {
                    url: "@Url.Action("BindingCrewToday")",
                dataType: "json",
                type: "POST",
            },
            parameterMap: function (options, operation) {
                if (operation !== "read" && options != '') {
                    return kendo.stringify(options);
                }
                else if (operation == "read") {
                    return options;
                }
            }
        },
            schema: {
            data: "data",
            total: "total",
        model: {
            fields: {
                "Barcode": {type: "string" },
                "NamaCrew": { type: "string" },
                }
        }
    },
        pageSize: 10,
    serverPaging: true,
    serverFiltering: true,
    serverSorting: true,
    //filter: { field: "Status", operator: "contains", value: "RETRIEVED" }
    sort: { field: "Id", dir: "desc" },
        });

            $("#gridCrew").kendoGrid({
                dataSource: dataSourceCrew,
                filterable: kendoGridFilterable,
                pageable: true,
                sortable: true,
                columns: [
                    {
                        field: "Barcode",
                    },
                    {
                        field: "NamaCrew",
                        title: "Nama Crew",
                    },
                                        
                ],

                //editable: "popup"
            });

        //Binding Crew yang white list
        var dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: "@Url.Action("BindingWhitelist")",
                    dataType: "json",
                    type: "POST",
                },
                parameterMap: function (options, operation) {
                    if (operation !== "read" && options != '') {
                        return kendo.stringify(options);
                    }
                    else if (operation == "read") {
                        return options;
                    }
                }
            },
            schema: {
                data: "data",
                total: "total",
                model: {
                    fields: {
                        "Id": {type: "int" },
                        "Barcode": { type: "string" },
                        "TanggalAwal": { type: "date" },
                        "TanggalAkhir": { type: "date" },
                    }
                }
            },
            pageSize: 10,
            serverPaging: true,
            serverFiltering: true,
            serverSorting: true,
            //filter: { field: "Status", operator: "contains", value: "RETRIEVED" }
            sort: { field: "Id", dir: "desc" },
        });

        $("#grid").kendoGrid({
            dataSource: dataSource,
            filterable: kendoGridFilterable,
            pageable: true,
            sortable: true,
            columns: [
                {
                    field: "Id",
                },
                {
                    field: "Barcode",
                    title: "Barcode",
                },
                {
                    field: "TanggalAwal",
                    title: "Tanggal Awal",
                    format: "{0: dd MMMM yyyy}",
                    //format: "{0: yyyy-MM-dd HH:mm}",
                    width: 150,
                },
                {
                    field: "TanggalAkhir",
                    title: "Tanggal Akhir",
                    format: "{0: dd MMMM yyyy}",
                    //format: "{0: yyyy-MM-dd HH:mm}",
                    width: 150,
                },

                {
                    command: [
                        {
                            name: "edit",
                            text: "edit",
                            click: editItem,
                            imageClass: "glyphicon glyphicon-edit",
                            template: '<a class="k-button-icon #=className#" #=attr# href="\\#"><span class="#=imageClass#"></span></a>'
                        },
                        {
                            name: "delete",
                            text: "delete",
                            click: deleteItem,
                            imageClass: "glyphicon glyphicon-remove",
                            template: '<a class="k-button-icon #=className#" #=attr# href="\\#"><span class="#=iconClass# #=imageClass#"></span></a>'
                        }
                    ],
                    width: "90px"
                }

            ],

            //editable: "popup"
        });

    });
    </script>
}
