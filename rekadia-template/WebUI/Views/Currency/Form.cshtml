@model WebUI.Models.CurrencyFormStub

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string currentController = (string)ViewContext.RouteData.Values["controller"];
    string currentAction = (string)ViewContext.RouteData.Values["action"];
    string backLink = "";

    if (currentAction == "Create")
    {
        ViewBag.Title = "Tambah Mata Uang";
    }
    else
    {
        ViewBag.Title = ViewBag.name + " | Edit";
    }
    backLink = Url.Action("Index");
}

<div class="page-header">
    <h1>@ViewBag.Title</h1>
</div>

@using (@Html.BeginForm(currentAction, currentController, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    
    <div class="form-group">
	    @Html.LabelFor(model => model.Currency, new { @class = "col-xs-2 control-label" })
	    <div class="col-xs-4">
            @Html.EditorFor(model => model.Currency, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Currency)
	    </div>
    </div>
    
    <div class="form-group">
	    @Html.LabelFor(model => model.Value, new { @class = "col-xs-2 control-label" })
	    <div class="col-xs-4">
            @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control form-control-decimal" } })
            @Html.ValidationMessageFor(model => model.Value)
	    </div>
    </div>

    <div class="form-group">
		<div class="col-xs-offset-2 col-xs-10">
			<button type="submit" class="btn btn-primary">Save</button>
			<a href="@backLink" class="btn btn-link">Cancel</a>
		</div>
	</div>
}